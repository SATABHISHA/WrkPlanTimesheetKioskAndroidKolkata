    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_background_layer_vk1">

            <RelativeLayout
                android:id="@+id/rl_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_background_layer_view_vk1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_empname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Hello\n Bhattachraya, Achintya"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <LinearLayout
                    android:id="@+id/ll_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_empname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="06-Aug-2021"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="06:10 PM"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_headlines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_view1"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_child1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Employee ID"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_emp_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="33"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_child2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Supervisor 1"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_supervisor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="a,b"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_child3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Supervisor 2"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tv_supervisor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_view1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_punch_in"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_custom_btn_reusable_vk1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_punchtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Punch"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_punchtitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_punchtitle1"
                        android:layout_centerHorizontal="true"
                        android:text="IN"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_break_punchout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_break"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="17dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_custom_break_btn"
                        android:focusableInTouchMode="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_breaktitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Take a"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_breaktitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_breaktitle1"
                            android:layout_centerHorizontal="true"
                            android:text="BREAK"
                            android:textColor="#ffffff"
                            android:textSize="22sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_punch_out"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_custom_punch_out_btn"
                        android:focusableInTouchMode="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_punch_out_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Punch"
                            android:textColor="#ffffff"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_punch_out_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_punch_out_title1"
                            android:layout_centerHorizontal="true"
                            android:text="OUT"
                            android:textColor="#ffffff"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_view_select_task"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_custom_btn_reusable_vk1"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_view_select_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="View / Select / Switch Task"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_view_leave_balance"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_custom_btn_reusable_vk1"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_view_leave_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="View Leave Balance"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_custom_btn_reusable_vk1"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Cancel"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>